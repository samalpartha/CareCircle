{
    "openapi": "3.0.0",
    "info": {
        "title": "CareCircle API",
        "description": "API for CareCircle local development",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3002",
            "description": "Local development server"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "summary": "Health check",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
